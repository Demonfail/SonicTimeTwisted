var first = true;
var row_is_title = true;
var index = 0;

for(var i = 0; i &lt; array_height_2d(lines); i++)
{
    if(!first)
    {
        flat_credits_content[index] = '';
        index++;
    }
    else
    {
        first = false;
    }
    row_is_title = true;
    for(var j = 0; j &lt; array_length_2d(lines, i); j++)
    {
        if(row_is_title)
        {
            flat_credits_content[index] = '***'+lines[i,j]+'***';
            index++;
            row_is_title = false;
        }
        else
        {
            flat_credits_content[index] = lines[i,j];
            index++;
        }
    }
}
lines = flat_credits_content;
